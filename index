    <script>
        // Exam data from the image
        const exams = [
            { date: "2026-01-06", day: "Tuesday", code: "MAT 301", subject: "Real Analysis" },
            { date: "2026-01-13", day: "Tuesday", code: "MAT 302", subject: "Complex Analysis" },
            { date: "2026-01-20", day: "Tuesday", code: "MAT 303", subject: "O. Diff: Equ.II" },
            { date: "2026-01-27", day: "Tuesday", code: "MAT 304", subject: "Abstract Algebra" },
            { date: "2026-02-03", day: "Tuesday", code: "MAT 305", subject: "Mathematical Methods" },
            { date: "2026-02-10", day: "Tuesday", code: "MAT 306", subject: "Numerical Analysis I I" },
            { date: "2026-02-15", day: "Sunday", code: "MAT 307", subject: "Optimization" },
            { date: "2026-02-19", day: "Thursday", code: "MAT 308", subject: "Machines" },
            { date: "2026-02-22", day: "Sunday", code: "MAT 309", subject: "Differential Geometry" }
        ];

        // DOM elements
        const subjectList = document.getElementById('subjectList');
        const nextExamTitle = document.getElementById('nextExamTitle');
        const nextExamDate = document.getElementById('nextExamDate');
        const daysElement = document.getElementById('days');
        const hoursElement = document.getElementById('hours');
        const minutesElement = document.getElementById('minutes');
        const secondsElement = document.getElementById('seconds');
        const currentTimeElement = document.getElementById('currentTime');
        const progressText = document.getElementById('progressText');
        const progressFill = document.getElementById('progressFill');

        // Function to format date as DD/MM/YYYY
        function formatDate(dateString) {
            const date = new Date(dateString);
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const year = date.getFullYear();
            return `${day}/${month}/${year}`;
        }

        // Function to format date for display
        function formatDisplayDate(dateString) {
            const date = new Date(dateString);
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            return date.toLocaleDateString('en-US', options);
        }

        // Function to calculate time remaining until a specific date
        function getTimeRemaining(targetDate) {
            const now = new Date();
            const target = new Date(targetDate);
            
            // Set exam time to 10:00 AM
            target.setHours(10, 0, 0, 0);
            
            const timeDiff = target - now;
            
            if (timeDiff <= 0) {
                return {
                    total: 0,
                    days: 0,
                    hours: 0,
                    minutes: 0,
                    seconds: 0,
                    passed: true
                };
            }
            
            const days = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeDiff % (1000 * 60)) / 1000);
            
            return {
                total: timeDiff,
                days: days,
                hours: hours,
                minutes: minutes,
                seconds: seconds,
                passed: false
            };
        }

        // Function to update current time display
        function updateCurrentTime() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: true
            };
            
            const formattedTime = now.toLocaleDateString('en-US', options);
            currentTimeElement.innerHTML = `<i class="fas fa-clock"></i> ${formattedTime}`;
        }

        // Function to update countdown for all exams
        function updateAllCountdowns() {
            // Clear previous content
            subjectList.innerHTML = '';
            
            let nextExam = null;
            let nextExamTimeRemaining = null;
            let passedExams = 0;
            
            // Process each exam
            exams.forEach(exam => {
                const timeRemaining = getTimeRemaining(exam.date);
                const examDate = new Date(exam.date);
                examDate.setHours(10, 0, 0, 0);
                
                // Count passed exams for progress bar
                if (timeRemaining.passed) {
                    passedExams++;
                }
                
                // Create subject item
                const subjectItem = document.createElement('div');
                subjectItem.className = 'subject-item';
                
                // Check if exam has passed
                if (timeRemaining.passed) {
                    subjectItem.innerHTML = `
                        <div class="subject-info">
                            <div class="subject-name">${exam.subject}</div>
                            <div class="subject-details">
                                <span><i class="far fa-calendar"></i>${formatDate(exam.date)}</span>
                                <span><i class="far fa-clock"></i>${exam.day}</span>
                                <span><i class="fas fa-code"></i>${exam.code}</span>
                            </div>
                        </div>
                        <div class="subject-countdown">
                            <div class="exam-passed">Exam Completed</div>
                        </div>
                    `;
                } else {
                    // Find the next upcoming exam
                    if (!nextExam || timeRemaining.total < nextExamTimeRemaining.total) {
                        nextExam = exam;
                        nextExamTimeRemaining = timeRemaining;
                    }
                    
                    const statusClass = timeRemaining.days < 7 ? 'exam-upcoming' : '';
                    
                    subjectItem.innerHTML = `
                        <div class="subject-info">
                            <div class="subject-name">${exam.subject}</div>
                            <div class="subject-details">
                                <span><i class="far fa-calendar"></i>${formatDate(exam.date)}</span>
                                <span><i class="far fa-clock"></i>${exam.day}</span>
                                <span><i class="fas fa-code"></i>${exam.code}</span>
                            </div>
                        </div>
                        <div class="subject-countdown">
                            <div class="countdown-days">${timeRemaining.days} ${timeRemaining.days === 1 ? 'day' : 'days'}</div>
                            <div class="countdown-text">${String(timeRemaining.hours).padStart(2, '0')}h ${String(timeRemaining.minutes).padStart(2, '0')}m ${String(timeRemaining.seconds).padStart(2, '0')}s</div>
                            ${timeRemaining.days < 7 ? '<div class="exam-upcoming">Upcoming Soon</div>' : ''}
                        </div>
                    `;
                }
                
                subjectList.appendChild(subjectItem);
            });
            
            // Update progress bar
            const progressPercentage = (passedExams / exams.length) * 100;
            progressText.textContent = `${passedExams}/${exams.length} Completed`;
            progressFill.style.width = `${progressPercentage}%`;
            
            // Update next exam countdown display
            if (nextExam) {
                nextExamTitle.textContent = `${nextExam.subject}`;
                nextExamDate.textContent = `${formatDisplayDate(nextExam.date)} â€¢ ${nextExam.code}`;
                updateNextExamCountdown(nextExamTimeRemaining);
            } else {
                nextExamTitle.textContent = "All examinations completed";
                nextExamDate.textContent = "Congratulations on completing your exams!";
                daysElement.textContent = "00";
                hoursElement.textContent = "00";
                minutesElement.textContent = "00";
                secondsElement.textContent = "00";
            }
        }

        // Function to update next exam countdown
        function updateNextExamCountdown(timeRemaining) {
            daysElement.textContent = String(timeRemaining.days).padStart(2, '0');
            hoursElement.textContent = String(timeRemaining.hours).padStart(2, '0');
            minutesElement.textContent = String(timeRemaining.minutes).padStart(2, '0');
            secondsElement.textContent = String(timeRemaining.seconds).padStart(2, '0');
        }

        // Initialize the page
        function init() {
            updateCurrentTime();
            updateAllCountdowns();
            
            // Update countdowns every second
            setInterval(() => {
                updateAllCountdowns();
                updateCurrentTime();
            }, 1000);
        }

        // Start the application
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
